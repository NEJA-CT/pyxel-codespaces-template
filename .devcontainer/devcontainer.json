{
  "name": "Pyxel Web",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "forwardPorts": [
    8000
  ],
  "portsAttributes": {
    "8000": {
      "label": "Pyxel Web server",
      "onAutoForward": "openBrowser"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ]
    }
  },
  "postStartCommand": "python -m http.server 8000"
}